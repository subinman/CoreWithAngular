@model IEnumerable<EmployeeManagement.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
    <div class="card m-3">
        <div class="card-header">
            <h3>@employee.Name</h3>
        </div>
        @*<img class="card-img-top" src="~/images/noimage.jpg" />*@
        <img src="~/images/noimage.jpg" asp-append-version="true" />
        <div class="card-footer text-center">
            @*<a href="#" class="btn btn-primary">View</a>*@
            @*<a asp-controller="Home" asp-action="Details"
            asp-route-id="@employee.Id"  asp-append-version="true">View</a>*@


            <a href="/Home/Details/@employee.Id" class="btn btn-primary m-1">View</a>

            <a href="#" class="btn btn-primary m-1">Edit</a>
            <a href="#" class="btn btn-primary m-1">Delete</a>
        </div>
    </div>
    }
</div>
